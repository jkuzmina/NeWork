<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audio_container_nested"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/audio_attachment_nested"
        android:id="@+id/audio_attachment_nested"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeAudio"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/audio_attachment_nested"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/remove"
        android:textAllCaps="false"
        app:cornerRadius="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>