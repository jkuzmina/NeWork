<resources>
    <!-- Base application theme. -->

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="LikeCheckBox" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="android:textColor">@color/icon_button_tint</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_tint</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/checkbox_tint</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/appbar_color</item>
        <item name="titleTextColor">@color/header_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/account_circle</item>
    </style>

    <style name="SubheaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MainText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/Fab</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Link">
        <item name="android:textColorLink">@color/primary</item>
        <item name="android:visibility">gone</item>
        <item name="android:autoLink">web</item>
    </style>
    <style name="dialog" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorSecondary">@color/primary</item>
        <item name="colorPrimary">@color/primary</item> <!-- button text color -->
    </style>

</resources>